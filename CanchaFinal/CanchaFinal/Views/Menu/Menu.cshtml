<script>
    // Get the modal
    var modal = document.getElementById('id01');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<body>
    <div class="contenedor">
        <nav class="navbar navbar-expand-lg navbar-light colornavbar contenedor">
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="contenedor navbar-nav">
                    <a class="nav-link margen" href="#">INICIO <span class="sr-only">(current)</span></a>
                    <a class="nav-link margen" href="#">MISION</a>
                    <a class="nav-link margen" href="#">VISION</a>

                    <!--Panel de administrador-->
                    <button onclick="document.getElementById('id01').style.display='block'" class="boton margen">ADMINISTRADOR</button>
                    <div id="id01" class="modal">

                        <form class="modal-content animate" action="/Menu/Verificacion" method="post">
                            <div class="imgcontainer">
                                <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
                            </div>

                            <div class="container">
                                <label for="uname"><b>RUT</b></label>
                                <input type="text" placeholder="Ingresar rut" name="Rut" required>

                                <label for="psw"><b>CONTRASEÑA</b></label>
                                <input type="password" placeholder="Ingresar contraseña" name="Contraseña" required>

                                <button type="submit">Ingresar</button>
                            </div>

                            <div class="container" style="background-color:#f1f1f1">
                                <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancelar</button>
                            </div>
                            <div>
                                <h3>@ViewBag.error</h3>
                            </div>
                        </form>
                    </div>
                    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true"></a>
                </div>
            </div>
        </nav>
    </div>
</body>

